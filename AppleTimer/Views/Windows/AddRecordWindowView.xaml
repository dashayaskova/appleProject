<Window x:Class="AppleTimer.Views.Windows.AddRecordWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:AppleTimer.Views"
        mc:Ignorable="d"
        Title="AddGroupWindowView" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <viewmodels:RecordControlView Grid.ColumnSpan="2"></viewmodels:RecordControlView>
        <Button CommandParameter="{Binding ElementName=TaskWindowName}" Content="Cancel" Grid.Row="11" Grid.Column="0" Margin="5" Width="100" Command="{Binding CancelCommand}"></Button>
        <Button CommandParameter="{Binding ElementName=TaskWindowName}" Content="Save" Grid.Row="11" Grid.Column="1" Margin="5" Width="100" Command="{Binding SaveCommand}"></Button>
    </Grid>
</Window>
